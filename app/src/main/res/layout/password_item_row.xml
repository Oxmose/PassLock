<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:padding="16dp">


    <ImageView
        android:id="@+id/password_item_row_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_lock_outline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/item_icon" />

    <TextView
        android:id="@+id/password_item_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/password_item_row_value"
        android:layout_alignTop="@+id/password_item_row_icon"
        android:text="@string/passwordtitlemaximum32characters"
        app:layout_constraintStart_toEndOf="@+id/password_item_row_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/password_item_row_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/password_item_row_icon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="64dp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@+id/password_item_row_icon"
        app:layout_constraintTop_toBottomOf="@+id/password_item_row_title" />

    <TextView
        android:id="@+id/password_item_row_value3"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/password_item_row_title"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@+id/password_item_row_icon"
        app:layout_constraintTop_toBottomOf="@+id/password_item_row_title" />


</RelativeLayout>